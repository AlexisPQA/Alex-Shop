        <div class="product-layout">
          {{#each book}}
          <div class="product">
            <div class="img-container">
              <img src="{{cover}}" alt="" />
              <div class="addCart">
                <i id ="{{id}}" class="fas fa-shopping-cart" onclick = "addToCart(this.id)"></i>
              </div>
              <ul class="side-icons">
                <span><i class="fas fa-search"></i></span>
                <span><i class="far fa-heart"></i></span>
                <span><i class="fas fa-sliders-h"></i></span>
              </ul>
            </div>
            <div class="bottom">
              <a href='/products/book/{{id}}'>{{title}}</a>
              <div class="price">
